		//(2)
		Locale.setDefault(Locale.US);
		double a, pi, resultado;
		
		pi = 3.14159;
		System.out.println("Digite o numero de entrada: ");
		a = sc.nextDouble();
		
		resultado = pi * Math.pow(a, 2.0);
		System.out.printf("A = %.4f \n", resultado);
			
		sc.close();
